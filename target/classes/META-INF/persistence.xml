<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="KarwasPU" transaction-type="JTA">
		<jta-data-source>java:/KarwasDS</jta-data-source>
		<class>pe.edu.upc.karwas.model.entity.Anuncio</class>
		<class>pe.edu.upc.karwas.model.entity.Auto</class>
		<class>pe.edu.upc.karwas.model.entity.Cliente</class>
		<class>pe.edu.upc.karwas.model.entity.Empleado</class>
		<class>pe.edu.upc.karwas.model.entity.Empresa</class>
		<class>pe.edu.upc.karwas.model.entity.Lavado</class>
		<class>pe.edu.upc.karwas.model.entity.Persona</class>
		<class>pe.edu.upc.karwas.model.entity.Rol</class>
		<class>pe.edu.upc.karwas.model.entity.Sucursal</class>
		<class>pe.edu.upc.karwas.model.entity.Usuario</class>

		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="none" />
		</properties>
	</persistence-unit>
</persistence>
